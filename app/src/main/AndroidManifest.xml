<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.juanjo.udl.geotracker">

    <uses-feature android:name="android.hardware.location" android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GeneralMapActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".RecordRegistrationActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".RecordViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".OptionsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".AddFieldActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".HistoricActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
    </application>

</manifest>