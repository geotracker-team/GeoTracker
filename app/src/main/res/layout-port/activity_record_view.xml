<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtProj" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/txtDate" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtPosition" />

        <TextView
            android:id="@+id/latid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="41.6082347 " />

        <TextView
            android:id="@+id/lenid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.6234154" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgid"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/epsmaps" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtDescription" />

            <TextView
                android:id="@+id/desid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="0dp"
                android:text="EPS building   " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/txtTemp" />

            <TextView
                android:id="@+id/temid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:text="20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/txtHum" />

            <TextView
                android:id="@+id/humid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:text="55" />

        </LinearLayout>

    </LinearLayout>
</android.widget.LinearLayout>