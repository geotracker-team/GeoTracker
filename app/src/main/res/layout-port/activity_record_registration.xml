<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="#a9a7a7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project: EPS tracking project"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Date of the record: 17:14 - 2/11/2017"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position" />

        <EditText
            android:id="@+id/latid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123123" />

        <EditText
            android:id="@+id/lenid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="321321" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgid"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/epsmaps" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description" />

            <EditText
                android:id="@+id/desid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="0dp"
                android:text="EPS building   "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Temperature (CÂº)" />

            <EditText
                android:id="@+id/temid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:text="20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Relative Humidity (%)" />

            <EditText
                android:id="@+id/humid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:text="55"/>

        </LinearLayout>

    </LinearLayout>

    <!--Content pending to change-->
    <Button
        android:id="@+id/btnaddfield"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:background="#797979"
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        android:text="+"/>

    <Button
        android:id="@+id/btnsendid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#797979"
        android:layout_marginTop="10dp"
        android:text="Send Record"/>


</android.widget.LinearLayout>